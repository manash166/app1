<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/otp_background"
    tools:context=".otp_screen">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="396dp"
        android:layout_height="217dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="ENTER OTP"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Mobile_no."
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="402dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editTextNumber3"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editTextNumber4"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editTextNumber8"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editTextNumber9"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="50sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/button_design"
        android:text="Verify"
        android:textSize="25sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/resend_btn"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:layout_marginStart="29dp"
        android:text="Didnt get otp?"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/resend_btn"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginEnd="67dp"
        android:shadowColor="#BD3333"
        android:text="RESEND"
        android:textColor="#FBF9F9"
        android:textColorHint="#DB3030"
        app:backgroundTint="#A01919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:strokeColor="#EC1616" />

</androidx.constraintlayout.widget.ConstraintLayout>